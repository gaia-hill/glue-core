{
	"extends": ["tslint-config-airbnb", "tslint-react"],
	"linterOptions": {
	  "exclude": [
		"config/**/*.js",
		"**/node_modules/**"
	  ]
	},
	"rules": {
	  "no-console":false,
	  "indent": [true, "tab", 4],
	  "ter-indent": [true,"tab",{ "SwitchCase": 1 }],
	  "semicolon": [true, "never"],
	  "curly":true,

	  "jsx-no-multiline-js": false,
	  "jsx-no-lambda": false,
	  "jsx-boolean-value": false,

	  "import-name": false,
	  "max-line-length": false,

	  "trailing-comma": [false, {
			"multiline": {
				"objects": "never",
				"arrays": "never",
				"functions": "ignore",
				"typeLiterals": "ignore"
			},
			"esSpecCompliant": true
		}]
	}
  }